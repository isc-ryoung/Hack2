# Instance - IRIS Operations Agent Configuration

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-2024-08-06
OPENAI_FALLBACK_MODEL=gpt-3.5-turbo

# Token Budget Management
TOKEN_BUDGET_PER_WORKFLOW=5000
TOKEN_BUDGET_PER_SESSION=50000
TOKEN_BUDGET_PER_DAY=500000
BUDGET_ALERT_THRESHOLD=0.8

# LLM Request Configuration
LLM_TIMEOUT_SECONDS=30
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY_SECONDS=2

# External System Endpoints
EXTERNAL_MESSAGE_ENDPOINT=http://localhost:8080/api/messages
EXTERNAL_COMMAND_ENDPOINT=http://localhost:8080/api/commands

# IRIS Configuration
IRIS_CPF_PATH=/usr/irissys/iris.cpf
IRIS_INSTANCE_NAME=IRIS

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_TRACE_IDS=true

# Development Settings
ENABLE_LLM_MOCKING=false
ENABLE_DRY_RUN=false
